# =============================================================================
# Demo Trading Platform - Environment Configuration
# =============================================================================

# Market Data APIs
# Get free API key at: https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_api_key_here

# Feature Flags
ENABLE_CRYPTO=true
ENABLE_STOCKS=true

# Database Configuration
POSTGRES_USER=traderuser
POSTGRES_PASSWORD=localdevpass123
POSTGRES_DB=tradingdb
DATABASE_URL=postgresql://traderuser:localdevpass123@postgres:5432/tradingdb

# Redis Configuration
REDIS_PASSWORD=localredis123
REDIS_URL=redis://:localredis123@redis:6379/0

# Trading Settings
INITIAL_BALANCE=100000.00
TRADING_FEE_PERCENT=0.0

# API Settings
ALLOWED_ORIGINS=*
LOG_LEVEL=INFO

# WebSocket Settings
WS_PING_INTERVAL=30
PRICE_UPDATE_INTERVAL=5
